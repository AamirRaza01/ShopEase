<%- include('./partials/header') %>

<% if(success.length>0){ %>
    <div class="absolute top-[70px] left-1/2 -translate-x-1/2 -translate-y-1/2 p-3 rounded-md bg-green-500">
        <span class="inline-block mt-1 mb-1 text-white">
            <%= success %>
        </span>
    </div>
    <% } %>


<div class="container mx-auto mt-10 mb-10">
    <div class="max-w-md mx-auto bg-white shadow-md rounded-lg overflow-hidden md:max-w-2xl">
        <div class="md:flex">
            <div class="md:flex-shrink-0">
                <img class="h-48 w-full object-cover md:h-full md:w-48" src="data:image/jpeg;base64,<%= product.image.toString('base64') %> "  alt="<%= product.name %>">
            </div>
            <div class="p-8 w-full">
                <div class="uppercase tracking-wide text-sm text-indigo-500 font-semibold"><%= product.name %></div>
                <p class="mt-2 text-gray-500">Price: Rs.<%= product.price %></p>
                <% if (product.discount) { %>
                    <p class="mt-2 text-red-500">Discount: Rs.<%= product.discount %> off</p>
                <% } %>
                <div class="flex justify-between w-full mt-4 ">
                    <div class=" bg-indigo-500 text-white flex items-center justify-center px-4 py-2  rounded-lg hover:bg-indigo-700">
                        <a class="" href="/mycart/<%= product._id%>">
                            Add to Cart
                        </a>
                    </div>

                    <div class=" bg-green-500 text-white flex items-center justify-center px-4 py-2  rounded-lg hover:bg-green-700">
                        <a class="" href="/buy-now/<%= product._id%>">
                            Buy now
                        </a>
                    </div>
    
                    <div class="bg-orange-500 text-white flex items-center justify-center px-4 py-2  rounded-lg hover:bg-orange-700">
                        <a class="" href="/shop">
                            Go back
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('./partials/footer') %>

